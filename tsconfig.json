{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "jasmine"
    ],
    "sourceMap": true,
    "declaration": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
